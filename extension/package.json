{
  "name": "vga-playground",
  "displayName": "VGA Playground",
  "description": "Write and simulate Verilog code for VGA signals with Tiny Tapeout integration",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "verilog",
    "vga",
    "fpga",
    "hardware",
    "simulation",
    "tiny-tapeout"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vga-playground.openSimulator",
        "title": "Open VGA Simulator",
        "category": "VGA Playground"
      },
      {
        "command": "vga-playground.simulate",
        "title": "Simulate",
        "category": "VGA Playground"
      },
      {
        "command": "vga-playground.reset",
        "title": "Reset Simulation",
        "category": "VGA Playground"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .v",
          "command": "vga-playground.openSimulator",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "vga-playground.openSimulator",
          "when": "resourceExtname == .v"
        }
      ]
    },
    "languages": [
      {
        "id": "verilog",
        "aliases": ["Verilog", "verilog"],
        "extensions": [".v", ".vh", ".sv"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "verilog",
        "scopeName": "source.verilog",
        "path": "./syntaxes/verilog.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.19.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "ws": "^8.14.2"
  }
}